# LinkedIn API Configuration
# Copy this file to .env and fill in your credentials

# LinkedIn OAuth Access Token
# Get this from: https://www.linkedin.com/developers/apps
# Required scope: w_member_social
LINKEDIN_ACCESS_TOKEN=your_access_token_here

# LinkedIn Person URN
# Format: urn:li:person:YOUR_MEMBER_ID
# You can get your member ID from the LinkedIn API or your profile URL
LINKEDIN_PERSON_URN=urn:li:person:YOUR_MEMBER_ID

# Optional: LinkedIn OAuth credentials (for future OAuth flow implementation)
LINKEDIN_CLIENT_ID=your_client_id_here
LINKEDIN_CLIENT_SECRET=your_client_secret_here

# Safety switch - set to true to enable actual publishing
# Leave false while testing to prevent accidental posts
ENABLE_PUBLISHING=false
